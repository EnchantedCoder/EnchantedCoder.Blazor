<EditForm Model="@model">
    <HxButtonGroup>
        <HxInputCheckbox @bind-Value="model.checkbox1" ButtonColor="ThemeColor.Primary" Label="Checkbox 1" />
        <HxInputCheckbox @bind-Value="model.checkbox2" ButtonColor="ThemeColor.Secondary" Label="Checkbox 2" />
        <HxInputCheckbox @bind-Value="model.checkbox3" ButtonColor="ThemeColor.Light" Label="Checkbox 3" />
    </HxButtonGroup>
</EditForm>

@code {
    private DemoModel model = new();

    class DemoModel
    {
        public bool checkbox1 { get; set; } = false;
        public bool checkbox2 { get; set; } = false;
        public bool checkbox3 { get; set; } = false;
    }
}
