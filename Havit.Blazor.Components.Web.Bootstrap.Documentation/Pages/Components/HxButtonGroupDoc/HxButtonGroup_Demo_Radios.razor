<EditForm Model="model">
	<DataAnnotationsValidator />

	<HxButtonGroup>
		<HxRadioButtonList ButtonColorSelector="@(c => c.ButtonColor)" TItem="RadioInfo" TValue="RadioInfo" Data="@checkboxes" @bind-Value="@model.SelectedRadio" TextSelector="@(c => c.Title)" ValueSelector="@(c => c)" />

	</HxButtonGroup>
</EditForm>

@code {
	private FormModel model = new FormModel();

	private List<RadioInfo> checkboxes = new List<RadioInfo>
	{
		new RadioInfo { Title = "Checkbox 1", ButtonColor=ThemeColor.Primary },
		new RadioInfo { Title = "Checkbox 2", ButtonColor=ThemeColor.Secondary },
		new RadioInfo { Title = "Checkbox 3", ButtonColor=ThemeColor.Light },
	};

	internal class FormModel
	{
		public RadioInfo SelectedRadio { get; set; }
	}

	internal class RadioInfo
	{
		public string Title { get; set; }
		public ThemeColor ButtonColor { get; set; }
	}

}
