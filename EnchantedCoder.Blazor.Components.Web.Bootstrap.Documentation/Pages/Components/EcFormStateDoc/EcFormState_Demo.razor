<EditForm Model="@model">
    <DataAnnotationsValidator />

    <EcSwitch Text="Enabled" @bind-Value="@model.Enabled" Hint="Toggle the switch to enabled/disable form state." />

    <EcFormState Enabled="@model.Enabled">
        <EcInputText Label="Text value" @bind-Value="@model.StringValue" />
        <EcCheckbox Text="Bool value" @bind-Value="@model.BooleanValue" />
        <EcSubmit Text="Validate" Color="ThemeColor.Primary" />
    </EcFormState>

</EditForm>
@code {
    private Model model = new Model();
    private class Model
    {
        public bool Enabled { get; set; } = true;

        [Required]
        public string StringValue { get; set; }

        public Boolean BooleanValue { get; set; }
    }
}
