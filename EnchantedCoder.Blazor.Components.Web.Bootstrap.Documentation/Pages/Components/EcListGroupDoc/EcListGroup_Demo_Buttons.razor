<EcListGroup>
	<EcListGroupItem OnClick="() => SetLastButtonClicked(1)" Active="true">The current button</EcListGroupItem>
    <EcListGroupItem OnClick="() => SetLastButtonClicked(2)">A second item</EcListGroupItem>
    <EcListGroupItem OnClick="() => SetLastButtonClicked(3)">A third item</EcListGroupItem>
    <EcListGroupItem OnClick="() => SetLastButtonClicked(4)">A fourth item</EcListGroupItem>
    <EcListGroupItem OnClick="() => SetLastButtonClicked(5)">And a fifth one</EcListGroupItem>
</EcListGroup>

<p class="mt-3">Last button clicked: @lastButtonClicked</p>

@code {
	private int? lastButtonClicked = null;

	private void SetLastButtonClicked(int number)
	{
		lastButtonClicked = number;
	}
}
