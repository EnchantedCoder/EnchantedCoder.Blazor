<EcTooltip @ref="tooltipComponent" Text="Tooltip on top">
	<EcButton Color="ThemeColor.Secondary" Text="Tooltip on top (default)" />
</EcTooltip>
<EcButton Text="Disable" OnClick="HandleDisableClick" Color="ThemeColor.Warning" Outline="@(!enabled)" Spinner="false" />
<EcButton Text="Enable" OnClick="HandleEnableClick" Color="ThemeColor.Success" Outline="@enabled" Spinner="false" />

@code
{
	private EcTooltip tooltipComponent;
	private bool enabled = true;

	private async Task HandleEnableClick()
	{
		await tooltipComponent.EnableAsync();
		enabled = true;
	}

	private async Task HandleDisableClick()
	{
		await tooltipComponent.DisableAsync();
		enabled = false;
	}
}