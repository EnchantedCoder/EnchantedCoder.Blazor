<EditForm Model="@model">
	<DataAnnotationsValidator />

	<EcInputText @bind-Value="@model.Text" Placeholder="Text" ValidationMessageMode="ValidationMessageMode.None" />
	<EcSubmit Color="ThemeColor.Primary" Text="Submit" />

    <EcValidationMessage For="() => model.Text" />
</EditForm>

@code {
	private DemoModel model = new();

	protected class DemoModel
	{
		[Required(ErrorMessage = "A text has to be written.")]
		public string Text { get; set; }
	}
}