@using EnchantedCoder.Blazor.Components.Web.Bootstrap.Documentation.Pages
@inherits PerformanceLoggingComponentBase

<!--googleoff: index-->

<div class="card card-demo my-3">

    @if (Tabs)
    {
        <div class="card-header">
            <EcTabPanel CssClass="card-header-tabs">
                <EcTab Id="demo" Title="Demo" OnTabActivated="HandleDemoTabActivated" />
                <EcTab Id="source" Title="Source" OnTabActivated="HandleCodeTabActivated" />
            </EcTabPanel>
        </div>
    }

    <div class="card-body p-0">

        @if (showingDemo || !Tabs)
        {
            <div class="@CssClassHelper.Combine("p-3", this.DemoCardCssClass)">
                <DynamicComponent Type="this.Type" />
            </div>
        }
        @if (!showingDemo || !Tabs)
        {
            if (code is null)
            {
                <EcPlaceholderContainer Animation="PlaceholderAnimation.Glow">
                    <EcPlaceholder Columns="8" />
                </EcPlaceholderContainer>
            }
            else
            {
                <pre class="@(!Tabs ? "bg-body-tertiary" : null)">
                    <code class="language-cshtml">
                        @(code.Trim())
                    </code>
                </pre>
            }
        }
    </div>
</div>

<!--googleon: index-->