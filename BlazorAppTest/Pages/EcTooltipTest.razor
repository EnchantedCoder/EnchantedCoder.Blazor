@page "/EcTooltipTest"

<h3>EcTooltip</h3>
<p>
	<EcTooltip Text="My tooltip">
		<span>This text has a tooltip with default placement (top).</span>
	</EcTooltip>
</p>

<p>
	<EcTooltip Text="My tooltip" Placement="TooltipPlacement.Bottom">
		<span>This text has a tooltip on the bottom side.</span>
	</EcTooltip>
</p>

<p>
	<EcTooltip Text="My tooltip" Placement="TooltipPlacement.Left">
		<span>This text has a tooltip on the left side.</span>
	</EcTooltip>
</p>

<p>
	<EcTooltip Text="My tooltip" Placement="TooltipPlacement.Right">
		<span>This text has a tooltip on the right side.</span>
	</EcTooltip>
</p>

<p>
	<EcTooltip Text="My tooltip" Placement="TooltipPlacement.Auto">
		<span>This text has a tooltip with an auto-placement.</span>
	</EcTooltip>
</p>

<p>
	<EcTooltip Text="a">a</EcTooltip>
	<EcTooltip Text="b">b</EcTooltip>
	<EcTooltip Text="c">c</EcTooltip>
	<EcTooltip Text="d">d</EcTooltip>
	<EcTooltip Text="e">e</EcTooltip>
</p>

<h4>Dynamic tooltip</h4>

<EcButton OnClick="HandleIncrementButtonClick" Text="Increment" Tooltip="When the button is clicked the tooltip of the following tooltip is updated. Thats why we consider the tooltip to be dynamic :-)." Color="ThemeColor.Secondary" />

<p>
	<EcTooltip Text="@i.ToString()">
		<span>This text has a dynamic tooltip.</span>
	</EcTooltip>
</p>

<EcButton OnClick="HandleTextToggleButtonClick" Text="TextToggle" Color="ThemeColor.Secondary" />
<p>
	<EcTooltip Text="@text">
		<span>This text has a dynamic tooltip.</span>
	</EcTooltip>
</p>


<h4>Tooltip on button</h4>
<EcButton Text="Long processing" OnClick="async () => await Task.Delay(5000)" Color="ThemeColor.Light" Tooltip="Tooltip" />

@code {
	private int i;
	private string text;

	private void HandleIncrementButtonClick()
	{
		i++;
	}

	private void HandleTextToggleButtonClick()
	{
		if (String.IsNullOrEmpty(text))
		{
			text = "Now there is a tooltip";
		}
		else
		{
			text = String.Empty;
		}
	}
}