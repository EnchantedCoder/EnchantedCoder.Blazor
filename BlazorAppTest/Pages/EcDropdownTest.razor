@page "/EcDropdownTest"

<h1>EcDropdown</h1>

<EcDropdownButtonGroup AutoClose="DropdownAutoClose.Outside">
	<EcDropdownToggleButton @ref="dropdownToggleComponent" Color="ThemeColor.Primary" CssClass="@(IsBold ? "fw-bold" : null)">Show dropdown</EcDropdownToggleButton>
	<EcDropdownContent CssClass="@(IsBold ? "bg-light" : null)">
		<div class="row m-3" style="min-width: 100px;">
			<div class="col">
				<div>
					<EcCheckbox @bind-Value="IsBold" Text="Toggle button text bold" />
				</div>
			</div>
		</div>
	</EcDropdownContent>
</EcDropdownButtonGroup>

<EcButton OnClick="() => dropdownToggleComponent.ShowAsync()">Show</EcButton>
<EcButton OnClick="() => dropdownToggleComponent.HideAsync()">Hide</EcButton>


@code {
	private EcDropdownToggleButton dropdownToggleComponent;
	private bool IsBold { get; set; } = false;
}