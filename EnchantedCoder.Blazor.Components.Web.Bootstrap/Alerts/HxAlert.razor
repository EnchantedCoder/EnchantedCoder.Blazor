@namespace EnchantedCoder.Blazor.Components.Web.Bootstrap
<div class="@CssClassHelper.Combine("alert", GetColorCss(), this.Dismissible ? "alert-dismissible fade show" : null, this.CssClass)" role="alert">
	@ChildContent
	@if (this.Dismissible)
	{
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	}
</div>