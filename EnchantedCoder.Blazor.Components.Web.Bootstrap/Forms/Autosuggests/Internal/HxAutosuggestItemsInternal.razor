@namespace EnchantedCoder.Blazor.Components.Web.Bootstrap.Internal
@typeparam TItem

<div class="@CssClassHelper.Combine("dropdown-menu", CssClass)">
	@if (Items != null && Items.Any())
	{
		for (int i = 0; i < Items.Count; i++)
		{
			TItem currentItem = Items[i];

			<button
				class="@CssClassHelper.Combine(
					"dropdown-item text-truncate",
					i == FocusedItemIndex ? FocusedItemCssClass : null)"
				type="button"
				@onclick="async () => await HandleItemClick(currentItem)"
				@onclick:stopPropagation="true"
				tabindex="-1">

				@ItemTemplate(currentItem)

			</button>
		}
	}
	else if (EmptyTemplate != null)
	{
		@EmptyTemplate
	}
</div>