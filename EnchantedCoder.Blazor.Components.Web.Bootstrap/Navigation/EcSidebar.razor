@namespace EnchantedCoder.Blazor.Components.Web.Bootstrap

<div class="@CssClassHelper.Combine("ec-sidebar", GetResponsiveCssClass("flex-??-grow-0"), GetCollapsedCssClass(), this.CssClass)" id="@Id">
    <div class="nav-menu d-flex flex-column flex-grow-1 position-relative">

        @if (HeaderTemplate is not null)
        {
            <div class="ec-sidebar-header d-flex align-items-center">
                <CascadingValue Value="@this">
                    @HeaderTemplate
                </CascadingValue>
                <EcButton
                    CssClass="@CssClassHelper.Combine("ec-sidebar-navbar-toggler ms-auto", GetResponsiveCssClass("d-??-none"))"
                    data-bs-toggle="collapse"
                    data-bs-target="@($"#{NavContentElementId}")"
                    aria-controls="@NavContentElementId"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    Icon="BootstrapIcon.List" />
            </div>
        }

        <div class="@CssClassHelper.Combine("ec-sidebar-collapse collapse", GetResponsiveCssClass("d-??-flex"), (!Collapsed) ? "overflow-auto": null)" id="@NavContentElementId">
            <div class="ec-sidebar-body mb-auto w-100">
                <EcNav Id="@navId" Orientation="NavOrientation.Vertical" CssClass="ps-0">
                    <CascadingValue Value="@this" IsFixed="true">
                        @ItemsTemplate
                    </CascadingValue>
                </EcNav>
                <div class="ec-sidebar-toggler" role="button" @onclick="HandleCollapseToggleClick"
                     @onclick:stopPropagation="true">

                    @if (TogglerTemplate is null)
                    {
                        <div class="@CssClassHelper.Combine(
                            "ec-sidebar-toggler-icon-wrapper",
                            "d-none", // Hide the sidebar toggler in navbar mode (when below the responsive breakpoint).
                            GetResponsiveCssClass("d-??-flex"))">

                            <EcIcon CssClass="ec-sidebar-toggler-icon" Icon="@(Collapsed ? ExpandIcon : CollapseIcon)" />
                        </div>
                    }
                    else
                    {
                        @TogglerTemplate(new() { SidebarCollapsed = this.Collapsed })
                    }
                </div>
            </div>

            @if (FooterTemplate is not null)
            {
                <div class="ec-sidebar-footer">
                    @FooterTemplate(new() { SidebarCollapsed = this.Collapsed })
                </div>
            }
        </div>
    </div>
</div>